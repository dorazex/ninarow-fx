<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="mainVBox" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller">
   <children>
      <HBox fx:id="controlsHBox">
         <children>
            <Button fx:id="loadButton" mnemonicParsing="false" text="Load" />
            <Button fx:id="startButton" mnemonicParsing="false" text="Start" />
             <Button fx:id="historyButton" mnemonicParsing="false" text="History" />
             <Button fx:id="exitButton" mnemonicParsing="false" text="Exit" />
         </children>
      </HBox>

       <AnchorPane fx:id="boardAnchor">
           <children>
               <GridPane fx:id="boardGridPane" prefHeight="500.0" prefWidth="500.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

               </GridPane>
           </children>
       </AnchorPane>

      <Label fx:id="messageLabel"
             text="Label" />

   </children>
</VBox>
